<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimary">@color/white</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中颜色-->
        <item name="colorAccent">@color/blue</item>
        <!--文字颜色主体-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--去掉点击水波纹效果-->
        <item name="android:selectableItemBackground">@null</item>
        <!--        <item name="android:selectableItemBackgroundBorderless">@null</item>-->
        <!--activity支持5.0动画跳转-->
        <!--        <item name="android:windowActivityTransitions">true</item>-->
        <item name="android:windowBackground">@color/bg_window</item>

        <!--布局内容延展到状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- 更换Toolbar OVerFlow menu icon -->
        <!--<item name="actionOverflowButtonStyle">@style/OverFlowIcon</item>-->
        <!-- 设置 toolbar 溢出菜单的文字的颜色 -->
        <!--<item name="android:textColor">@android:color/holo_red_dark</item>-->
        <!-- 设置 显示在toobar上菜单文字的颜色 -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- 设置该属性边距为0dp-->
        <item name="contentInsetStart">0dp</item>
        <!-- 设置toolbar 弹出菜单的字体大小和溢出菜单文字大小-->
        <!--<item name="android:textSize">15sp</item>-->
    </style>

    <!--沉侵式布局-->
    <style name="AppTheme.windowTranslucent" parent="AppTheme">
        <!--布局内容延展到状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="loading_dialog_window_animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_fade_out</item>
    </style>

    <style name="DialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--item 字体中样式-->
    <style name="TextNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--输入框样式-->
    <style name="edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">240</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:background">@drawable/bg_white_solid_round_corner_4_dadada_stroke</item>
    </style>

    <!--MaterialButton基本样式-->
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">normal</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--分割线-->
    <style name="DivideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">#E5E5E5</item>
    </style>
</resources>