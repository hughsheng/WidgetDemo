<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/fragment_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.guyuan.handlein.base.ui.customizeview.SearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <!--        <include layout="@layout/layout_classify_select" />-->

        <!--        <include layout="@layout/layout_date_select" />-->

        <!--        <include layout="@layout/layout_title_tab" />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.easy_recycleview_library.BaseRecyclerView
                android:id="@+id/base_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_window" />

            <include
                android:id="@+id/empty_view"
                layout="@layout/empty"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>


    </LinearLayout>
</layout>